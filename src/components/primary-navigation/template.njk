<nav class="hmcts-primary-navigation {{- ' ' + params.classes if params.classes}}"{% if (params.label) %} aria-label="{{ params.label }}"{% endif %}>

  <div class="hmcts-primary-navigation__container{% if params.containerClasses %} {{ params.containerClasses }}{% endif %}">

    <div class="hmcts-primary-navigation__items">

      <ul class="hmcts-primary-navigation__list">

        {% for item in params.items %}
          <li class="hmcts-primary-navigation__item">
            <a class="hmcts-primary-navigation__link" {{ 'aria-current="page"' | safe if item.active }} href="{{ item.href }}">
              {{ item.html | safe if item.html else item.text }}
            </a>
          </li>
        {% endfor %}

      </ul>
      
    </div>

    {% if params.searchHtml %}
      <div class="hmcts-primary-navigation__search">
        {{ params.searchHtml | safe }}
      </div>
    {% endif %}

  </div>

</nav>