{%- from "button/macro.njk" import govukButton %}

<div class="hmcts-details-bar {{- ' ' + params.classes if params.classes}}">
  
  <div class="hmcts-details-bar__container">

    <div class="hmcts-details-bar__details">
      <span class="hmcts-details-bar__reference">{{params.reference}}</span>
      {% if params.title %}
        <span class="hmcts-details-bar__title">{{ params.title.html | safe if params.title.html else params.title.text }}</span>
      {% endif %}
    </div>

    {% if params.items %}
    <div class="hmcts-details-bar__actions">
      {% for item in params.items %}        
        {{ govukButton({
          classes: 'hmcts-details-bar__action ' + (item.classes if item.classes),
          text: item.text,
          href: item.href
        }) }}
      {% endfor %}
    </div>
    {% endif %}

  </div>

</div>